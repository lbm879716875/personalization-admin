<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
	<Appenders>
		<Console name="STDOUT" target="SYSTEM_OUT">
			<!-- logging formatter -->
			<PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss,SSS} %5p #%T %X{jwtEmployeeNumber} %X{jwtIpAddress} %c:%L - %m%n" />
		</Console>
	</Appenders>
	<Loggers>
		<Root level="debug"> <!-- level select : debug / info -->
			<AppenderRef ref="STDOUT" />
		</Root>
	</Loggers>
</Configuration>